

{
  "manifest_version": 2,
  "name": "Svelte Slicer",
  "version": "1.0",
  "minimum_chrome_version": "10.0",
  "description": "Browser devtools extension for time traveling and visualizing Svelte applications.",
  "devtools_page": "devtools/index.html",
  "permissions": [
    "storage",
    "activeTab", 
    "<all_urls>",
    "*://*/*"
  ],
  "background": {
    "scripts": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content-script.js"]
    }] 
}